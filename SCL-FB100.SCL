(* ====================================================================== *)
(* FB100: TAKTGEBER                                                       *)
(*                                                                        *)
(* Erzeugt ein globales 1Hz Taktsignal (500ms AN / 500ms AUS).            *)
(* Wird fuer alle Blinkfunktionen der Meldeleuchten (in FB200) benoetigt. *)
(* ====================================================================== *)
FUNCTION_BLOCK FB100

VAR_OUTPUT
  Takt_1Hz         : BOOL; // 1Hz Taktsignal (500ms an, 500ms aus)
END_VAR

VAR
  Timer_ON         : TON; // Timer fuer AN-Phase (500ms)
  Timer_OFF        : TON; // Timer fuer AUS-Phase (500ms)
  State            : INT; // 0 = AUS, 1 = AN
END_VAR

BEGIN
  
  CASE State OF
    
    0:
      // Schritt 0: AUS-Phase
      // AKTION: Taktsignal AUS, Timer fuer 500ms starten
      Takt_1Hz := FALSE;
      Timer_OFF(IN := TRUE, PT := T#500ms);
      
      // TRANSITION: 500ms abgelaufen
      IF Timer_OFF.Q THEN
        Timer_OFF(IN := FALSE);
        State := 1;
      END_IF;
    
    1:
      // Schritt 1: AN-Phase
      // AKTION: Taktsignal AN, Timer fuer 500ms starten
      Takt_1Hz := TRUE;
      Timer_ON(IN := TRUE, PT := T#500ms);
      
      // TRANSITION: 500ms abgelaufen
      IF Timer_ON.Q THEN
        Timer_ON(IN := FALSE);
        State := 0;
      END_IF;
  
  END_CASE;
END_FUNCTION_BLOCK

